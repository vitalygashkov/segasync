{
  "name": "segasync",
  "version": "2.0.2",
  "author": "Vitaliy Gashkov <vitnore@gmail.com>",
  "description": "Asynchronous downloader for segmented media",
  "license": "Apache-2.0",
  "keywords": [
    "download",
    "async",
    "worker threads",
    "progress",
    "retry"
  ],
  "main": "segasync.js",
  "types": "types/segasync.d.ts",
  "files": [
    "lib",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitnore/segasync.git"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/vitnore"
  },
  "scripts": {
    "test": "jest",
    "types": "tsc -p tsconfig.json",
    "lint": "eslint \"**/*.js\" --fix",
    "lint:check": "eslint \"**/*.js\"",
    "format": "prettier --loglevel warn --write \"**/*.{ts,js,json,yaml}\"",
    "format:check": "prettier --loglevel warn --check \"**/*.{ts,js,json,yaml}\""
  },
  "dependencies": {
    "undici": "^4.14.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.17",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "pkg": {
    "assets": [
      "lib/**/*"
    ],
    "patches": {
      "./node_modules/undici/lib/fetch/body.js": [
        "require('stream/web')",
        "require('stream').web"
      ],
      "./node_modules/undici/lib/core/util.js": [
        "require('stream/web')",
        "require('stream').web"
      ],
      "./node_modules/undici/lib/fetch/request.js": [
        "require('stream/web')",
        "require('stream').web"
      ],
      "./node_modules/undici/lib/fetch/index.js": [
        "require('stream/web')",
        "require('stream').web"
      ]
    }
  }
}
